<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorMain" prefHeight="750.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oop_project.View.controllers.ProductController" stylesheets="@/org/oop_project/view/css/style.css" styleClass="root-dark">
  <children>
    <AnchorPane id="AnchorHead" prefHeight="146.0" prefWidth="1100.0" styleClass="header-dark">
      <children>
        <Label layoutY="28.0" prefWidth="1100.0" alignment="CENTER" text="Product Manager" textAlignment="CENTER">
          <font><Font name="System Bold" size="36.0"/></font>
        </Label>
        <Label layoutY="94.0" prefWidth="1100.0" alignment="CENTER" text="Product Dashboard" textAlignment="CENTER">
          <font><Font name="Georgia" size="19.0"/></font>
        </Label>
      </children>
    </AnchorPane>

    <Button fx:id="btnBack" layoutX="970.0" layoutY="20.0" prefWidth="100.0" prefHeight="30.0" text="Back" onAction="#backToLogin" />

    <!-- Form left -->
    <Label layoutX="30.0" layoutY="160.0" text="Product Details">
      <font><Font name="System Bold" size="18.0"/></font>
    </Label>

    <Label layoutX="30.0" layoutY="195.0" text="Product ID:"></Label>
    <TextField fx:id="productIdField" layoutX="150.0" layoutY="192.0" prefWidth="200.0" editable="false" promptText="Auto-generated" />

    <Label layoutX="30.0" layoutY="230.0" text="Name:"></Label>
    <TextField fx:id="nameField" layoutX="150.0" layoutY="227.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="265.0" text="Description:"></Label>
    <TextField fx:id="descriptionField" layoutX="150.0" layoutY="262.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="300.0" text="Type:"></Label>
    <ComboBox fx:id="unitTypeCombo" layoutX="150.0" layoutY="297.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="335.0" text="Family:"></Label>
    <TextField fx:id="familyField" layoutX="150.0" layoutY="332.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="370.0" text="SubFamily:"></Label>
    <TextField fx:id="subFamilyField" layoutX="150.0" layoutY="367.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="405.0" text="Unit Price:"></Label>
    <TextField fx:id="unitPriceField" layoutX="150.0" layoutY="402.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="440.0" text="Tax Rate %:"></Label>
    <TextField fx:id="taxRateField" layoutX="150.0" layoutY="437.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="475.0" text="Discount %:"></Label>
    <TextField fx:id="discountRateField" layoutX="150.0" layoutY="472.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="510.0" text="Supplier ID:"></Label>
    <TextField fx:id="supplierIdField" layoutX="150.0" layoutY="507.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="545.0" text="Quantity:"></Label>
    <TextField fx:id="quantityField" layoutX="150.0" layoutY="542.0" prefWidth="200.0" />

    <Button fx:id="btnAdd" layoutX="30.0" layoutY="585.0" prefWidth="110.0" prefHeight="35.0" text="Add" onAction="#addProduct" />
    <Button fx:id="btnUpdate" layoutX="150.0" layoutY="585.0" prefWidth="110.0" prefHeight="35.0" text="Update" onAction="#updateProduct" />
    <Button fx:id="btnRemove" layoutX="270.0" layoutY="585.0" prefWidth="110.0" prefHeight="35.0" text="Remove" onAction="#removeProduct" />
    <Button fx:id="btnClear" layoutX="30.0" layoutY="630.0" prefWidth="110.0" prefHeight="35.0" text="Clear" onAction="#clearFields" />

    <Label fx:id="statusLabel" layoutX="30.0" layoutY="680.0" prefWidth="350.0" alignment="CENTER" />

    <!-- Right: table and search -->
    <Label layoutX="400.0" layoutY="160.0" text="All Products">
      <font><Font name="System Bold" size="18.0"/></font>
    </Label>

    <TextField fx:id="searchField" layoutX="400.0" layoutY="190.0" prefWidth="300.0" promptText="Search by ID or Name" />
    <Button fx:id="btnSearch" layoutX="710.0" layoutY="190.0" prefWidth="80.0" text="Search" onAction="#searchProduct" />
    <Button fx:id="btnReset" layoutX="800.0" layoutY="190.0" prefWidth="80.0" text="Reset" onAction="#resetSearch" />

    <TableView fx:id="productTable" layoutX="400.0" layoutY="230.0" prefHeight="470.0" prefWidth="670.0">
      <columns>
        <TableColumn fx:id="colId" text="ID" prefWidth="80.0" />
        <TableColumn fx:id="colName" text="Name" prefWidth="120.0" />
        <TableColumn fx:id="colType" text="Type" prefWidth="80.0" />
        <TableColumn fx:id="colFamily" text="Family" prefWidth="90.0" />
        <TableColumn fx:id="colSubFamily" text="SubFamily" prefWidth="90.0" />
        <TableColumn fx:id="colUnitPrice" text="Unit Price" prefWidth="90.0" />
        <TableColumn fx:id="colTax" text="Tax %" prefWidth="70.0" />
        <TableColumn fx:id="colDiscount" text="Discount %" prefWidth="90.0" />
        <TableColumn fx:id="colRetail" text="Retail" prefWidth="80.0" />
        <TableColumn fx:id="colSupplier" text="Supplier" prefWidth="80.0" />
        <TableColumn fx:id="colQty" text="Qty" prefWidth="60.0" />
      </columns>
    </TableView>
  </children>
</AnchorPane>

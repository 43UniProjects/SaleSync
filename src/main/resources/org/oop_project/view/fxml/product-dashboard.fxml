<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane id="AnchorMain" prefHeight="750.0" prefWidth="1100.0" styleClass="root-dark" stylesheets="@/org/oop_project/view/css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.oop_project.view.controllers.ProductController">
  <children>
    <AnchorPane id="AnchorHead" prefHeight="146.0" prefWidth="1100.0" styleClass="header-dark">
      <children>
        <Label fx:id="productHead" alignment="CENTER" layoutY="28.0" prefWidth="1100.0" text="Product Manager" textAlignment="CENTER">
          <font><Font name="System Bold" size="36.0" /></font>
        </Label>
        <Label fx:id="productSubHead" alignment="CENTER" layoutY="94.0" prefWidth="1100.0" text="Product Dashboard" textAlignment="CENTER">
          <font><Font name="Georgia" size="19.0" /></font>
        </Label>
      </children>
    </AnchorPane>

    <Button fx:id="btnLogout" layoutX="970.0" layoutY="20.0" onAction="#backToLogin" prefHeight="30.0" prefWidth="100.0" text="Logout">
                <graphic>
                  <ImageView fitWidth="16.0" fitHeight="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/org/oop_project/view/images/sign-out.png" />
                     </image>
                  </ImageView>
               </graphic>
         <font>
            <Font name="System Bold" size="12.800000190734863" />
         </font></Button>

    <!-- Form left -->
    <Label layoutX="30.0" layoutY="160.0" text="Product Details">
      <font><Font name="System Bold" size="18.0" /></font>
    </Label>

    <Label layoutX="30.0" layoutY="207.0" text="Product ID:" />
    <TextField fx:id="productIdField" editable="false" layoutX="150.0" layoutY="204.0" prefWidth="200.0" promptText="Auto-generated" />

    <Label layoutX="30.0" layoutY="242.0" text="Name:" />
    <TextField fx:id="nameField" layoutX="150.0" layoutY="239.0" prefWidth="200.0" promptText="Enter product name" />

    <Label layoutX="30.0" layoutY="277.0" text="Description:" />
    <TextField fx:id="descriptionField" layoutX="150.0" layoutY="274.0" prefWidth="200.0" promptText="Enter description" />

    <Label layoutX="30.0" layoutY="312.0" text="Type:" />
    <ComboBox fx:id="unitTypeCombo" layoutX="150.0" layoutY="309.0" prefWidth="200.0" promptText="Select unit type" />

    <Label layoutX="30.0" layoutY="347.0" text="Family:" />
    <TextField fx:id="familyField" layoutX="150.0" layoutY="344.0" prefWidth="200.0" promptText="Enter family" />

    <Label layoutX="30.0" layoutY="382.0" text="SubFamily:" />
    <TextField fx:id="subFamilyField" layoutX="150.0" layoutY="379.0" prefWidth="200.0" promptText="Enter sub family" />

    <Label layoutX="30.0" layoutY="417.0" text="Unit Price:" />
    <TextField fx:id="unitPriceField" layoutX="150.0" layoutY="414.0" prefWidth="200.0" promptText="Enter unit price" />

    <Label layoutX="30.0" layoutY="452.0" text="Tax Rate %:" />
    <TextField fx:id="taxRateField" layoutX="150.0" layoutY="449.0" prefWidth="200.0" promptText="Enter tax rate" />

    <Label layoutX="30.0" layoutY="487.0" text="Discount %:" />
    <TextField fx:id="discountRateField" layoutX="150.0" layoutY="484.0" prefWidth="200.0" promptText="Enter discount" />

    <Label layoutX="30.0" layoutY="522.0" text="Supplier ID:" />
    <TextField fx:id="supplierIdField" layoutX="150.0" layoutY="519.0" prefWidth="200.0" promptText="Enter supplier id" />

    <Label layoutX="30.0" layoutY="557.0" text="Quantity:" />
    <TextField fx:id="quantityField" layoutX="150.0" layoutY="554.0" prefWidth="200.0" promptText="Enter quantity" />

    <Button fx:id="btnAdd" layoutX="195.0" layoutY="603.0" onAction="#addProduct" prefHeight="35.0" prefWidth="110.0" text="Add">
          <graphic>
            <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/org/oop_project/view/images/add.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="12.800000190734863" />
         </font>

    </Button>
    <Button fx:id="btnUpdate" layoutX="69.0" layoutY="656.0" onAction="#updateProduct" prefHeight="35.0" prefWidth="110.0" text="Update">
          <graphic>
            <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/org/oop_project/view/images/update.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="12.800000190734863" />
         </font></Button>
    <Button fx:id="btnDelete" layoutX="195.0" layoutY="656.0" onAction="#removeProduct" prefHeight="35.0" prefWidth="110.0" text="Remove">
          <graphic>
            <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/org/oop_project/view/images/trash.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="12.800000190734863" />
         </font></Button>
    <Button fx:id="btnClear" layoutX="69.0" layoutY="603.0" onAction="#clearFields" prefHeight="35.0" prefWidth="110.0" text="Clear">
          <graphic>
            <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/org/oop_project/view/images/clear.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font name="System Bold" size="12.800000190734863" />
         </font></Button>

    <Label fx:id="statusLabel" alignment="CENTER" layoutX="20.0" layoutY="708.0" prefWidth="350.0" />

    <!-- Right: table and search -->
    <Label layoutX="400.0" layoutY="160.0" text="All Products">
      <font><Font name="System Bold" size="18.0" /></font>
    </Label>

    <TextField fx:id="searchField" layoutX="400.0" layoutY="190.0" prefWidth="300.0" promptText="Search by ID or Name" />
    <Button fx:id="btnSearch" layoutX="710.0" layoutY="190.0" onAction="#searchProduct" prefWidth="80.0" text="Search" />
    <Button fx:id="btnReset" layoutX="800.0" layoutY="190.0" onAction="#resetSearch" prefWidth="80.0" text="Reset" />

    <TableView fx:id="productTable" layoutX="400.0" layoutY="230.0" prefHeight="470.0" prefWidth="670.0">
      <columns>
        <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
        <TableColumn fx:id="colName" prefWidth="120.0" text="Name" />
        <TableColumn fx:id="colType" prefWidth="80.0" text="Type" />
        <TableColumn fx:id="colFamily" prefWidth="90.0" text="Family" />
        <TableColumn fx:id="colSubFamily" prefWidth="90.0" text="SubFamily" />
        <TableColumn fx:id="colUnitPrice" prefWidth="90.0" text="Unit Price" />
        <TableColumn fx:id="colTax" prefWidth="70.0" text="Tax %" />
        <TableColumn fx:id="colDiscount" prefWidth="90.0" text="Discount %" />
        <TableColumn fx:id="colRetail" prefWidth="80.0" text="Retail" />
        <TableColumn fx:id="colSupplier" prefWidth="80.0" text="Supplier" />
        <TableColumn fx:id="colQty" prefWidth="60.0" text="Qty" />
      </columns>
    </TableView>
  </children>
</AnchorPane>
